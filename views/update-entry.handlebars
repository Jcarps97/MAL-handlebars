<form class="col-10 p-4 m-auto">
        <input type="hidden" id="edit-entry-id" value="{{entry.id}}"/>
        <h4 class="form group col-5 m-auto">EDIT ENTRY</h4>
        <div class="form-group">
            <label for="entryTitle">Title:</label>
            <textarea class="form-control" id="edited-title" rows="1">{{entry.title}}</textarea>
        </div>
        <div class="form-group">
            <label for="entryProgress">Progress:</label>
            <textarea class="form-control" id="edited-progress" rows="1">{{entry.progress}}</textarea>
        </div>
        <div class="form-group">
            <label for="entryEpisodes">Episodes seen:</label>
            <textarea class="form-control" id="edited-episodes" rows="1">{{entry.episodes_seen}}</textarea>
        </div>
        <div class="form-group">
            <label for="entryRating">Rating (1-10):</label>
            <textarea class="form-control" id="edited-rating" rows="1">{{entry.rating}}</textarea>
        </div>
        <div class="d-flex justify-content-center">
            <button id="edit-entry-button" class="btn btn-dark col-4">Update Entry</button>
        </div>
</form> 


<div class="d-flex justify-content-center">
</div>



<script src="/js/update-entry.js"></script>