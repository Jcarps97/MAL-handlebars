<div class="p-4 col-sm-12 col-lg-3">
    <a href="/dashboard/new"><button class="waves-effect waves-light btn-large">Add New Entry</button></a>
</div>

<div class="row">

      {{#each entries as |entry| }}
        <div class= "col-sm-10 col-md-6 col-lg-4">
        <div class="card large">
          <div class="card-content">
            <span class="test card-title activator grey-text text-darken-4">{{entry.title}}<i class="material-icons right"></i></span>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><i class="material-icons right"></i></span>
            <p>{{entry.episodes_seen}}</p>
            <p>{{entry.rating}}</p>
            <p>By: {{entry.user_id}}</p>
            <p><a href="/api/post/{{entry.id}}" class="card-link">View Entry</a></p>
          </div>
        </div>
        </div>
      {{/each}}

</div>